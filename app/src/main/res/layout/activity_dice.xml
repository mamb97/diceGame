<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:flow_verticalStyle="spread"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/intro_activity_gradient"
    tools:context=".DiceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        app:flow_verticalStyle="packed"
        android:clipChildren="false"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/aiScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_score_text_label"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    app:layout_constraintRight_toLeftOf="@id/aiScore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/aiScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_start_score"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/aiScoreLabel" />

                <TextView
                    android:id="@+id/humanScoreLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/human_score_text_label"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/humanScore1" />

                <TextView
                    android:id="@+id/humanScore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/human_start_score"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/notificationBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/notification_bar"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/ai_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/ai_dice_turn_label"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:flow_horizontalBias="0.5"
                android:textSize="15sp"/>
            <RelativeLayout
                android:id="@+id/row32"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@id/ai_label"
                app:layout_constraintEnd_toStartOf="@+id/row33"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/row32_dice_image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dice1v2"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/dice_logo_description"/>
                <ProgressBar
                    android:id="@+id/row32_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/black"
                    android:layout_centerInParent="true"
                    android:indeterminateBehavior="cycle"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row33"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/row32"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:flow_horizontalBias="0.5"
                android:visibility="invisible"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/row33_dice_image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dice1v2"
                    android:contentDescription="@string/dice_logo_description"/>
                <ProgressBar
                    android:id="@+id/row33_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminateBehavior="cycle"
                    android:indeterminateTint="@color/black"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
            android:id="@+id/diceGridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:columnCount="3"
            android:layout_gravity="center_horizontal"
            android:rowCount="2"
            >
            <ImageView
                android:id="@+id/diceGridView1"
                android:src="@drawable/dice1v2"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/dice_logo_description"/>
            <ImageView
                android:id="@+id/diceGridView2"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dice2v2"
                android:contentDescription="@string/dice_logo_description"/>
            <ImageView
                android:id="@+id/diceGridView3"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dice3v2"
                android:contentDescription="@string/dice_logo_description"/>
            <ImageView
                android:id="@+id/diceGridView4"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dice4v2"
                android:contentDescription="@string/dice_logo_description"/>
            <ImageView
                android:id="@+id/diceGridView5"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dice5v2"
                android:contentDescription="@string/dice_logo_description"/>
            <ImageView
                android:id="@+id/diceGridView6"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dice6v2"
                android:contentDescription="@string/dice_logo_description"/>
        </GridLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/row5"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/human_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/human_turn_label"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:flow_horizontalBias="0.5"
                android:textSize="15sp"/>
            <RelativeLayout
                android:id="@+id/row52"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:flow_horizontalBias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@id/human_label"
                app:layout_constraintEnd_toStartOf="@+id/row53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/row52_dice_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dice1v2"
                    android:contentDescription="@string/dice_logo_description"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row53"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/row52"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:flow_horizontalBias="0.5"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/row53_bt"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rolldicebutton"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/dice_logo_description"/>
                <ImageView
                    android:id="@+id/row53_dice_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dice1v2"
                    android:visibility="invisible"
                    android:contentDescription="@string/dice_logo_description"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>